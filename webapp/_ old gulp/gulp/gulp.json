{

  "compressing": false,
  "linting":     false,
  "minifying":   false,
  "notifying":   false,
  "syncing":     false,

  "// defaultTask": "styles",

  "//": "URL used for browser syncing.",
  "projectUrl": "",

  "//": "Where output files will generally be placed.",
  "defaultDest": "build",

  "//": "Paths to delete when the 'clean' task is run.",
  "cleanablePaths": ["build", "build/*", "tmp"],

  "//": "The temporary folder.  Ideally not the same as the output folder or a subfolder of it.",
  "tmp": "tmp",

  "//": "",
  "//": "'Watch' paths will override source paths when the 'watch' task is used.",
  "//": "",

  "fonts": {
    "src":  "fonts/*",
    "dest": "build/fonts"
  },

  "images": {
    "src":  "images/*",
    "dest": "build/images"
  },

  "scripts": {
    "src": [
      "src/_scripts/**/*"
    ]
  },

  "styles": {
    "src": "src/_styles/main.styl",
    "watch": [
      "src/_components/**/*.styl",
      "src/_styles/*.styl"
    ]
  },

  "vendorStyles": {
    "src": [
      "bower_components/**/*.css"
    ]
  },

  "templates": {
    "src": [
      "src/_components/general/**/*.jade",
      "src/_components/admin/**/*.jade"
    ],
    "dest": "build/templates"
  }

}
